<%= form_for(@employee) do |f| %>
    <%=f.label :first_name %>
    <%=f.text_field :first_name %><br>

    <%=f.label :last_name %>
    <%=f.text_field :last_name %><br><br>

    <%=f.label :alias %>
    <%=f.text_field :alias %><br>

    <%=f.label :title %>
    <%=f.text_field :title %><br>

    <%=f.label :office %>
    <%=f.text_field :office %><br>

    <label>What dog does this employee love?</label><br>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>

    <label>If you have an image url to link, please copy it here:</label>
    <%= f.text_field :img_url %>
    <br>
    <%= f.submit "Update" %>
<% end %>